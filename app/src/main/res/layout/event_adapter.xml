<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:clickable="true"
    android:onClick="onClickDelete">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event"
        android:id="@+id/tvAdapterEventName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12sp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/ibDeleteEvent"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/ic_delete"
        android:layout_alignBottom="@+id/tvAdapterNameOfPerson"
        android:layout_alignParentEnd="true"
        android:onClick="onClickDelete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvAdapterNameOfPerson"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvAdapterEventName"
        android:layout_toEndOf="@+id/tvAdapterEventName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/tvAdapterDate"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/ibDeleteEvent"
        android:layout_alignBottom="@+id/ibDeleteEvent"
        android:textSize="12sp"/>

</RelativeLayout>